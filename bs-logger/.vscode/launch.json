{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "rel. tests",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "args": ["--no-cache", "--runInBand", "--findRelatedTests", "${file}"],
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
